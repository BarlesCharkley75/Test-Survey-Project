<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creator_GradeMatchingQuestionsActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/light_grey">





        <TextView
            android:id="@+id/question_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="question 1"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp">

        </TextView>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:height="170dp"
            android:background="@color/light_grey"
            android:gravity="center"
            android:text="question"
            android:textColor="@color/black"
            android:textSize="18sp"
            >

        </TextView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="380dp"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/option_L1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="left 1"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/light_grey"
                                android:layout_marginTop="20dp"
                                >
                            </Button>

                            <Button
                                android:id="@+id/option_L2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="left 2"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/light_grey"
                                android:layout_marginTop="20dp"
                                >
                            </Button>

                            <Button
                                android:id="@+id/option_L3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="left 3"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/light_grey"
                                android:layout_marginTop="20dp"
                                >
                            </Button>

                            <Button
                                android:id="@+id/option_L4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="left 4"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/light_grey"
                                android:layout_marginTop="20dp"
                                >
                            </Button>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/option_R1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="right 1"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/light_grey"
                                android:textColor="@color/black"
                                android:layout_marginTop="20dp">

                            </Button>
                            <Button
                                android:id="@+id/option_R2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="right 2"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/light_grey"
                                android:textColor="@color/black"
                                android:layout_marginTop="20dp">

                            </Button>
                            <Button
                                android:id="@+id/option_R3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="right 3"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/light_grey"
                                android:textColor="@color/black"
                                android:layout_marginTop="20dp">

                            </Button>
                            <Button
                                android:id="@+id/option_R4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="right 4"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/light_grey"
                                android:textColor="@color/black"
                                android:layout_marginTop="20dp">

                            </Button>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/correct_answerL1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="50dp"
                        android:text="correct answerL1"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center">

                    </TextView>
                    <TextView
                        android:id="@+id/correct_answerL2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:text="correct answerL2"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center">

                    </TextView>
                    <TextView
                        android:id="@+id/correct_answerL3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:text="correct answerL3"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center">

                    </TextView>
                    <TextView
                        android:id="@+id/correct_answerL4"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:text="correct answerL4"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:textAlignment="center">

                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/points_get"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/deep_blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="0"
                                android:textSize="20sp">


                            </com.google.android.material.textfield.TextInputEditText>



                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/points_total"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="/0"
                            android:textAlignment="center"
                            android:textSize="40sp">

                        </TextView>






                    </LinearLayout>





                </LinearLayout>
            </ScrollView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/switchView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/GoNext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/deep_blue"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                ></Button>

            <Button
                android:id="@+id/GoPrev"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/deep_blue"
                android:text="PREV"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                ></Button>


        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>