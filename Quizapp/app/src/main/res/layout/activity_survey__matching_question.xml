<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Survey_MatchingQuestionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">



        <TextView
            android:id="@+id/question_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="question 1"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:height="170dp"
            android:background="@color/light_grey"
            android:gravity="center"
            android:text="question"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">



            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">




                <Button
                    android:id="@+id/option_L1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="left 1"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginTop="20dp"
                    >
                </Button>

                <Button
                    android:id="@+id/option_L2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="left 2"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginTop="20dp"
                    >
                </Button>

                <Button
                    android:id="@+id/option_L3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="left 3"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginTop="20dp"
                    >
                </Button>

                <Button
                    android:id="@+id/option_L4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="left 4"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginTop="20dp"
                    >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">



                <Button
                    android:id="@+id/option_R1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="right 1"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_grey"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp">

                </Button>
                <Button
                    android:id="@+id/option_R2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="right 2"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_grey"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp">

                </Button>
                <Button
                    android:id="@+id/option_R3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="right 3"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_grey"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp">

                </Button>
                <Button
                    android:id="@+id/option_R4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="right 4"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/light_grey"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp">

                </Button>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/switchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/GoNext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/deep_blue"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                ></Button>

            <Button
                android:id="@+id/GoPrev"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/deep_blue"
                android:text="PREV"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                ></Button>

            <Button
                android:id="@+id/Clear"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/deep_blue"
                android:text="clear"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true">

            </Button>


        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>