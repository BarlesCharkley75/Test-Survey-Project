<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creator_CreateQuestionsActivity"
    android:orientation="vertical"
    android:layout_gravity="center">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Create a:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="150dp"></TextView>

    <Button
        android:id="@+id/CreateMCQuestion"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="MC Question"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp">

    </Button>
    <Button
        android:id="@+id/CreateFRQuestion"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="FR Question"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp">

    </Button>
    <Button
        android:id="@+id/CreateMatchingQuestion"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Matching Question"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp">

    </Button>
    <Button
        android:id="@+id/CreateRankingQuestion"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Ranking Question"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp">

    </Button>


</LinearLayout>